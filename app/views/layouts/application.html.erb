<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "High Tea's Around The World" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

  <div class="row">
    <div class="large-3 columns">
      <h1><img src="http://placehold.it/400x100&text=Logo" /></h1>
    </div>
    <div class="large-9 columns">
      <ul class="right button-group">


          <% if current_admin %>
      <li><%= link_to 'Settings', edit_admin_registration_path(current_admin), :class => "button" %></li>
      <li><%= link_to 'Sign out', destroy_admin_session_path, :method => 'delete', :class => "button" %></li>
        
    <% else %>
      <li><%= link_to 'Sign in', new_admin_session_path, :class => "button" %> </li>
      <li><%= link_to 'Sign Up', new_admin_registration_path, :class => "button" %></li>
    <% end %>
      
      <li><a href="#" class="button">Link 2</a></li>
      <li><a href="#" class="button">Link 3</a></li>
      <li><a href="#" class="button">Link 4</a></li>
      </ul>
     </div>
    
<% if notice || alert %>
  <span class="alert alert-info"><%= notice %></span
  <span class="alert alert-info"><%= alert %></span>
<% end %>
   </div>
  
<!-- End Header and Nav -->
 
<!-- First Band (Slider) -->
 
  <div class="row">
    <div class="large-12 columns">
     <%= yield %>
    

    </div>
  </div>
  

  <!-- Footer -->
  
  <footer class="row">
    <div class="large-12 columns">
      <hr />
      <div class="row">
        <div class="large-6 columns">
          <p>&copy; Tracy Mu - Cake Eater</p>
        </div>
        <div class="large-6 columns">
          <ul class="inline-list right">
            <li><a href="#">Link 1</a></li>
            <li><a href="#">Link 2</a></li>
            <li><a href="#">Link 3</a></li>
            <li><a href="#">Link 4</a></li>
          </ul>
        </div>
      </div>
    </div> 
  </footer>



   

    
    <%= javascript_include_tag "application" %>
  </body>
</html>
